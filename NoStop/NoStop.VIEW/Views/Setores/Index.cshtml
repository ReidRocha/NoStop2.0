@model IEnumerable<NoStop.MODEL.Setor>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (1 == 1) {
<p>
    @if (Session["usuarioLogadoID"] != null && Session["Role"].ToString() == "admin")
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estabelecimento.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estabelecimento.Nome)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
            @Html.ActionLink("Entrar na fila", "Create", "FilaDatas", new { idSetor = item.ID, idCliente = 1 }, null) |
            @if (1 == 1)
            {
                @Html.ActionLink("Atender a fila", "FilaAtendente", "FilaDatas", new { idSetor = item.ID}, null) <span>|</span>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) <span>|</span>
                @Html.ActionLink("Delete", "Delete", new { id = item.ID }) <span>|</span>
            }

        </td>
    </tr>
}

</table>
